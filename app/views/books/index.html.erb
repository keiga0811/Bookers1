<p id="notice">
 <%= notice %>
</p>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？"%>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1>New book</h1>
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |massage| %>
        <li><%= massage %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for(@book, url:books_path) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>